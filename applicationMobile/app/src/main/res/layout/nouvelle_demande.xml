<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2AB1">
    <TextView
        android:id="@+id/titreDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/titreDemande"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/valueTitreDescription"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/titreDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:autofillHints=""
        android:background="@drawable/backgroundtext"
        android:gravity="center"
        android:hint="@string/titre"
        android:inputType="text" />

    <TextView
        android:id="@+id/champDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueTitreDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/champDescription"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/valueChampDescription"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_below="@id/champDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:autofillHints=""
        android:background="@color/white"
        android:gravity="top"
        android:hint="@string/valueChampDescription"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/defraiement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueChampDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/defraiement"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/valueDefraiement"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/defraiement"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:autofillHints=""
        android:background="@drawable/backgroundtext"
        android:gravity="center"
        android:hint="@string/Montant"
        android:inputType="number" />

    <TextView
        android:id="@+id/categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueDefraiement"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/Categorie"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/liste"
        android:layout_below="@+id/categorie"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:entries="@array/defaultValue"/>

    <TextView
        android:id="@+id/codePostal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/liste"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/codePostal"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/valueCodePostal"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/codePostal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:autofillHints=""
        android:background="@drawable/backgroundtext"
        android:gravity="center"
        android:hint="@string/codePostal"
        android:inputType="number" />
    <Button
        android:id="@+id/boutonRetour"
        android:layout_below="@id/valueCodePostal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroundbouton"
        android:text="@string/ajoutDemandes" />

    <Button
        android:id="@+id/buttonDeconnexionHome"
        android:layout_below="@id/boutonRetour"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/backgroundbouton"
        android:text="@string/retour" />

</RelativeLayout>